@model IEnumerable<Product>
<h1 class="text-center">Welcome to my sport store!</h1>
<div class="text-center">
    @foreach(Product item in Model)
    {
        <div>
            <h3>@item.Name</h3>
            @item.Description
            <h4>@item.Price.ToString("c")</h4>
        </div>
    }
</div>