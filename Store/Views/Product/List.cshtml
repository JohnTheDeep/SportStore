@model ProductListViewModel
<style>

    .container2 {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        padding: 10px;
    }
</style>
<div>
    <div class="container2">
        @foreach (Product item in Model.Products)
        {
            @Html.Partial("ProductSummary", item);
        }
    </div>
    <div page-model="@Model.PagingInfo"
         page-action="List"
         page-classes-enabled="true"
         page-class="btn"
         page-class-normal="btn-outline-secondary rounded-0 border-secondary"
         page-class-selected="btn-outline-primary rounded-0 border-primary"
         page-url-category="@Model.CurrentCategory"
         style="padding:10px" class="btn-group -right m-1">

    </div>
</div>




