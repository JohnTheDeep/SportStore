@model ProductListViewModel
<div class="text-center">
    <div style="justify-content:center">
        @foreach (Product item in Model.Products)
        {
            @Html.Partial("ProductSummary", item);
        }
    </div>
</div>

<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-secondary rounded-0 border-secondary"
     page-class-selected="btn-outline-primary rounded-0 border-primary" page-url-category="@Model.CurrentCategory" style="padding:10px" class="btn-group -right m-1">

</div>
