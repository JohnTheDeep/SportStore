<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sport's store</title>
    <link rel="stylesheet" 
          asp-href-include="~/twitter-bootstrap/css/bootstrap.min.css"
          asp-href-exclude="~/twitter-bootstrap/css/bootstrap-grid.css" />
    <link rel="stylesheet" asp-href-include="~/font-awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/bootstrap/css/"/>
</head>
<body>
    <div class="navbar navbar-inverse bg-info" role="navigation">
        <div class="row">
            <a class="col navbar-brand" href="#">SPORT STORE</a>

        </div>
        <div class="col-2 text-end border">
            @await Component.InvokeAsync("ShoppingCartSummary")
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>

</html>
