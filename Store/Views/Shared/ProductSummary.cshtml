@model Product
@{ 
    var formatProvider = new CultureInfo("en-US");
}
<div class="card card-outline-primary m-1 p-1" style="max-width:300px">
    <div class="bg-faded p-1">
        <h4 style="text-align:start">
            @Model.Name
            <span class="badge badge-primary badge-pill bg-info" style="float:right">
                <small style="color:black">@string.Format(formatProvider, "{0:c}", @Model.Price)</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1" style="text-align:start; max-height:35px">
        <p style="color:black">@Model.Description</p>
    </div>
</div>