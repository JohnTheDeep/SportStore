@model IEnumerable<Product>

@{ 
    ViewBag.Title = "Products catalog";
    Layout = "_AdminLayout";
}

<div style="margin:25px 25px">
    <form asp-controller="Admin" asp-action="Create" method="get">
        <button class="btn btn-primary" style="margin:0 0 5px 0">add new product</button>
    </form>
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.Price</td>
                    <td>
                        <form asp-action="RemoveProduct" method="post">
                            <a asp-controller="Admin" asp-action="Edit" class="btn btn-sm btn-warning" asp-route-productId="@item.Id">edit</a>
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>