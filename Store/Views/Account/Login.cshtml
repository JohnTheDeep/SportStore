@model LoginModel
@{ 
    ViewBag.Title = "Log in";
    Layout = "_AdminLayout";
}

<div class="container d-flex" style="justify-content: center">

    <div class="text-danger" asp-validation-summary="All" style="width:450px;">
        <h2 class="text-center" style="color:black">Log in</h2>
        <form asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
            </div>
            <button class="btn btn-primary" type="submit" style="margin-top:10px">Log In</button>
        </form>
    </div>
</div>