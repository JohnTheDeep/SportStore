@model ShoppingCartIndexViewModel
@{ 
    var cul = new CultureInfo("en-US");
}
<h2>Your shopping cart</h2>
<div style="padding:20px">
    <table class="table table-bordered table-striped" >
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (CartLine line in Model.Cart.Lines)
            {
                <tr>
                    <td class="text-center">
                        @line.Product.Name
                    </td>
                    <td class="text-left">
                        @line.Quantity
                    </td>
                    <td class="text-right">
                        @line.Product.Price.ToString() $
                    </td>
                    <td class="text-right ">
                        @string.Format($"{(@line.Quantity * @line.Product.Price)} $")
                    </td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">

                            <input type="hidden" name="_productId" value="@line.Id" />

                            <input type="hidden" name="_returnUrl" value="@Model.ReturnUrl" />

                            <button type="submit" class="btn btn-sm btn-danger">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="text-right fw-bold">Total:</td>
                <td></td>
                <td></td>
                <td class="text-right fw-bold">@Model.Cart.CalculateTotalValue().ToString() $</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue shopping</a>
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
</div>